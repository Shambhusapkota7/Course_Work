{% extends "layout.twig" %}

{% block content %}

<h2>Login</h2>

{% if error %}
    <p class="error">{{ error }}</p>
{% endif %}

<form method="post">
    <label>Email</label>
    <input type="email" name="email" required>

    <label>Password</label>
    <input type="password" name="password" required>

    <button type="submit">Login</button>
</form>

<p>New user?
    <a href="signup.php">Sign up</a>
</p>

{% endblock %}
